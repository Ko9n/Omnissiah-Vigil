{
  "name": "@monitoring/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "db:switch:sqlite": "node scripts/switch-db.js sqlite",
    "db:switch:postgres": "node scripts/switch-db.js postgres",
    "db:setup:postgres": "docker-compose up postgres -d && npm run prisma:deploy && npm run prisma:generate",
    "db:setup:sqlite": "npm run prisma:deploy && npm run prisma:generate"
  },
  "dependencies": {
    "@monitoring/shared": "workspace:*",
    "@prisma/client": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "ping": "^0.4.4",
    "socket.io": "^4.8.1",
    "systeminformation": "^5.21.22",
    "winston": "^3.17.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/ping": "^0.4.4",
    "@types/socket.io": "^3.0.2",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
