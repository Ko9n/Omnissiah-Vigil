{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "rules": {
    "no-unused-vars": "off",
    "prefer-const": "error",
    "no-console": "off"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "src/generated/"
  ],
  "root": true
} 